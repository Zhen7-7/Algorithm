package cn.zhen77.sort;
//内啡肽

public class QuickSort{
	public static void main(String[] args) {
		int[] arr = {8,4,2,6,7,9,3,1,10};
		partition(arr, 0, arr.length-1);
		TestTool.print(arr);
	}
	
	/*关键词partition:分区   pivot:轴*/
	static void partition(int arr[],int leftBound,int rightBound) {
		int left = leftBound;
		int right = rightBound-1;
		int pivot = arr[rightBound];
		while(left<right) {
			while(left<right && arr[left]<=pivot) left++;
			while(left<right && arr[right]>=pivot) right--;
			if(left<right)swap(arr,left,right);
		}
		if(left==leftBound) swap(arr,left,rightBound);
		if(right==rightBound-1) swap(arr, left, rightBound);
	}
	static void swap(int[] arr ,int a ,int b) {
		int temp = arr[a];
		arr[a] = arr[b];
		arr[b] = temp;
	}

}
