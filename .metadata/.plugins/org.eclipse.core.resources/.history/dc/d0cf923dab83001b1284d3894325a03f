package cn.zhen77.sort;

public class selectionSort_plus {
	public static void main(String[] args) {
		DataChecker.check();
	}
	static void sor(int[] arr) {
		
		int minPtr = 0;
		int maxPtr = 0;
		for(int i=0;i<(arr.length+1)/2;i++) {
			for(int j=i; j<arr.length-1-i;j++) {
				minPtr = arr[j]<arr[minPtr] ? j:minPtr;
				
			}
			for(int k=arr.length-1-i;k>i;k--) {
				maxPtr = arr[j]>arr[maxPtr] ? j:maxPtr;
			}
			swap(arr,i,minPtr);
			swap(arr,arr.length-1-i,maxPtr);
		}
		
	}
	//交换数组中的两个值
		static void swap(int[] arr,int a, int b) {
			int temp = arr[a];
			arr[a] = arr[b];
			arr[b] = temp;
		}
	
}
