package cn.zhen77.sort;

public class BubboSort {
	public static void main(String[] args) {
//		int[] arr ={6,3,8,2,1,5,7};
		int[] arr = getRandom();
		int temp = 0 ;
		//设置一个指针指向当前往后排列的数
		int pointer = 0 ;
		int index = 0;
		for(int n =0;n<arr.length;n++) {
			
			for(int i=1;i<arr.length;i++) {
				if(arr[pointer]>arr[i]) {
					swap(arr,pointer,i);
					pointer = i ;
					index++;
				}
			}
			
			if(pointer==index) {
				pointer++;
				index=pointer;
			}else {
				pointer=0;
				index = 0;  
			}	
			
			
		}
		
		SelectionSort.print(arr);
	}
	//生成随机数组
	static int[] getRandom() {
		int[] arr = new int[100];
		
		for(int i = 0;i<100;i++) {
		 int num = (int)(Math.random()*100);
		 arr[i] = num;
		}
		return arr;
	}
	//交换器
	static int[] swap(int[] arr, int a, int b){
		int temp = arr[a];
		arr[a] = arr[b];
		arr[b] = temp;
		return arr;
	}
}

