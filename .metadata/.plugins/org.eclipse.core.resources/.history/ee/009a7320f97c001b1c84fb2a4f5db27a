package cn.zhen77.sort;

public class BubboSort {
	public static void main(String[] args) {
		int[] arr ={6,3,8,2,1,5,7};
		for(int j=0;j<arr.length-1;j++) {
			if(arr[j]>arr[j+1]) {
				swap(arr,j,j+1);
			}
		}
		TestTool.print(arr);
	}
	//生成随机数组
	static int[] getRandom() {
		int[] arr = new int[100];
		
		for(int i = 0;i<100;i++) {
		 int num = (int)(Math.random()*100);
		 arr[i] = num;
		}
		return arr;
	}
	//交换器
	static int[] swap(int[] arr, int a, int b){
		int temp = arr[a];
		arr[a] = arr[b];
		arr[b] = temp;
		return arr;
	}
}

