package demo;

public class Recursion {
/*
 * 什么是递归
 * 递归就是在运行中调用自己
 * 
 * */
	
	public static void main(String[] args) {
		int num = recursion(10);
		System.out.println(num);
		
	}
	static int recursion(int num) {
		if(num>0) {
			System.out.println(num+"+"+ (num+1) +"="+(2*num+1));
		
			num += recursion(num-1);
			return num;
		}else {
			return num;
		}
	}
}
