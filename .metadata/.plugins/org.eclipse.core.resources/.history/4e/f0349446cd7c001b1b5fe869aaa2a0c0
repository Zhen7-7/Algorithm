package cn.zhen77.sort;

public class BubboSort {
	public static void main(String[] args) {
		int[] arr ={6,3,8,2,1,5,7};
		int temp = 0 ;
		//设置一个指针指向当前往后排列的数
		int pointer = 0 ;
		int index = 0;
		for(int n =0;n<arr.length;n++) {
			
			for(int i=1;i<arr.length;i++) {
				if(arr[pointer]>arr[i]) {
					temp=arr[pointer];
					arr[pointer]=arr[i];
					arr[i]=temp;
					pointer = i ;
					index++;
				}
			}
			
			if(pointer==index) {
				pointer++;
				index=pointer;
			}else {
				pointer=0;
				index = 0;
			}	
			
			
		}
		
		SelectionSort.print(arr);
	}

	
}

